# Database
DATABASE_URL="file:./dev.db"
# Para produção com PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/lei_scraper_db"

# Server
PORT=3000
NODE_ENV=development

# Cache
CACHE_TTL=3600

# Scraping
SCRAPING_TIMEOUT=30000
MAX_CONCURRENT_SCRAPING=5

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads


# Auth (JWT e credenciais do funcionário da câmara)
JWT_SECRET=alterar-este-segredo
# Informe email e senha OU apenas o hash bcrypt da senha
ADMIN_EMAIL=funcionario@camara.local
ADMIN_PASSWORD=senha-segura
# ADMIN_PASSWORD_HASH=$2a$10$exemploDeHashBcryptAqui
ADMIN_NAME=Funcionário Câmara

# CORS (origens permitidas, separadas por vírgula)
CORS_ORIGIN=http://localhost:8080
